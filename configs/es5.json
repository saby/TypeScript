{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "importHelpers": true,
    "lib": ["dom", "es5", "es2016", "es2018.promise", "scripthost"],
    "module": "amd",
    "moduleResolution": "classic",
    "noUnusedLocals": true,
    "paths": {
      "Core/*": ["WS.Core/core/*"],
      "Lib/*": ["WS.Core/lib/*"],
      "Transport/*": ["WS.Core/transport/*"],
      "json!*": ["WS.Core/global"],
      "tmpl!*": ["WS.Core/global"],
      "wml!*": ["WS.Core/global"]
    },
    "target": "es5",
    "types" : ["requirejs"]
  }
}
